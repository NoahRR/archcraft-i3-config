# I3 SETUP FROM SCRATCH:
# 
# steps for UBUNTU:
# - sudo apt install feh                    [set background]
# exec_always --no-snartup-id sleep1; feh --bg-fill ~/SAVED_DOWNLOADS/bak1-pink.jpg
exec_always --no-startup-id sleep1; /usr/bin/feh --bg-scale ~/SAVED_DOWNLOADS/images/BAK-AC.png
# exec --no-startup-id exec bash $HOME/.fehbg
# exec_always --no-startup-id feh --no-fehbg --bg-scale ~/SAVED_DOWNLOADS/beiheng-guo-IAVVv6z3D6g-unsplash.jpg &

# - sudo apt install playerctl              [play/pause/next/prev]
bindsym XF86AudioPlay exec playerctl play-pause
bindsym XF86AudioPause exec playerctl play-pause
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous

# sudo apt install light                    [brightness]
# sudo chmod +s /usr/bin/light
bindsym XF86MonBrightnessUp exec light -A 5
bindsym XF86MonBrightnessDown exec light -U 5

# should be pre-installed                   [volume]
bindsym XF86AudioRaiseVolume exec pactl set-sink-volume @DEFAULT_SINK@ +4000
bindsym XF86AudioLowerVolume exec pactl set-sink-volume @DEFAULT_SINK@ -4000
bindsym XF86AudioMute exec pactl set-sink-mute @DEFAULT_SINK@ toggle

